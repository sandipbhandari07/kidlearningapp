<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rootlay"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".setting.Setting">

    <ImageView
        android:id="@+id/banner_logo_setting"
        android:layout_width="225dp"
        android:layout_height="137dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="TODO"
        android:src="@drawable/kids_gif" />

    <ImageView
        android:id="@+id/text"
        android:layout_width="669dp"
        android:layout_height="66dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ll" />
    <LinearLayout
        android:id="@+id/lll"
        android:layout_width="match_parent"
        android:layout_below="@id/text"
        android:paddingTop="10dp"
        android:layout_height="100dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/img_music"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:background="@drawable/box"
            android:elevation="15dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/music" />

        <ImageButton
            android:id="@+id/img_sound"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:background="@drawable/box"
            android:elevation="15dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sound" />
        <ImageButton
            android:id="@+id/imgRateUs"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:background="@drawable/box"
            android:elevation="15dp"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/rate_uss" />
        <ImageButton
            android:id="@+id/imgShare"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:background="@drawable/box"
            android:elevation="15dp"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sharee" />
    </LinearLayout>

</RelativeLayout>